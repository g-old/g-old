import {
  LOAD_{{constantCase name}}S_SUCCESS,
  CREATE_{{constantCase name}}_SUCCESS,
  UPDATE_{{constantCase name}}_SUCCESS,
} from '../constants';


export default function byId(state = {}, action) {
  switch (action.type) {

    case LOAD_{{constantCase name}}S_SUCCESS:
    case UPDATE_{{constantCase name}}_SUCCESS:
    case CREATE_{{constantCase name}}_SUCCESS: {
      return {
        ...state,
        ...action.payload.entities.{{camelCase name}}s)
      }
    }

    default:
      return state;
  }
}

export const getEntity = (state, id) => state[id];
